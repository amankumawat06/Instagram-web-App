<%- include("./Includes/Head.ejs") %>

  <title>All Users</title>

<body>
  <div class="container my-4">
    <!-- HEADER -->
    <div
      class="d-flex justify-content-between align-items-center mb-3 flex-wrap"
    >
      <h1 class="mb-2 aluse">All Users</h1>
      <form action="/new" class="Btn">
        <button>Add new User +</button>
      </form>
    </div>

    <hr />

    <!-- USERS  -->
    <div class="row g-4">
      <% for(user of instaUsers) { %>
      <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
        <div class="instauser p-3 h-100">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <h4 class="mb-0"><%= user.name %></h4>
            <form action="/<%= user._id %>/edit">
              <button class="editBtn">Edit</button>
            </form>
          </div>

          <div class="d-flex align-items-center gap-3 mb-3">
            <img
              src="<%= user.Img %>"
              alt="User"
              class="rounded-circle"
              width="70"
              height="70"
            />
            <h6 class="mb-0">@<%= user.username %></h6>
          </div>

          <div class="mb-3 p-2 rounded statsBox fs-5">
            <span class="followersText">
              Followers: <%= user.followers %>
            </span>
            <span class="followSpace">&nbsp;&nbsp;&nbsp;</span>
            <span class="followingText">
              Following: <%= user.following %>
            </span>
          </div>

          <p class="mb-3"><%= user.bio %></p>

          <div class="lowerBtns">
            <div class="btnRow">
              <form
                action="/<%= user._id %>/follow"
                method="POST"
                id="FollowButton"
              >
                <button type="submit" class="followBtn w-100">
                  <%= user.isFollow ? "Following" : "Follow" %>
                </button>
              </form>

              <form action="/<%= user._id %>/msg">
                <button class="w-100">Message</button>
              </form>
            </div>

            <div class="btnRow mt-2">
              <form action="/<%= user._id %>">
                <button class="w-100 sbs">See in Details</button>
              </form>

              <form action="/<%= user._id %>?_method=DELETE" method="POST" class="deleteForm">
                <button class="w-100 deleteBtn">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <div class="warning-box">
      <p>⚠️ Please do not delete existing profiles.</p>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal-overlay hidden">
  <div class="modal-box">
    <h4>Delete Confirmation!</h4>

    <div class="modal-actions">
      <button id="cancelDelete" class="modal-cancel">Cancel</button>
      <button id="confirmDelete" class="modal-delete">Delete</button>
    </div>
  </div>
</div>


<script src="/JS/script.js"></script>
 </body>
